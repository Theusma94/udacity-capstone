<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="coronaState"
            type="com.theusmadev.coronareminder.data.local.model.CoronaStateData" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/reminderCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/state_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{coronaState.region}"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="State" />

            <TextView
                android:id="@+id/state_corona_cases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(coronaState.confirmed)}"
                app:layout_constraintStart_toStartOf="@+id/state_name"
                app:layout_constraintTop_toBottomOf="@+id/state_name"
                tools:text="Confirmed"/>

            <TextView
                android:id="@+id/state_corona_recovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(coronaState.recovered)}"
                app:layout_constraintStart_toStartOf="@+id/state_corona_cases"
                app:layout_constraintTop_toBottomOf="@+id/state_corona_cases"
                tools:text="Recovered"/>

            <TextView
                android:id="@+id/state_corona_deaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(coronaState.deaths)}"
                app:layout_constraintStart_toStartOf="@+id/state_corona_recovered"
                app:layout_constraintTop_toBottomOf="@+id/state_corona_recovered"
                tools:text="Deaths"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
