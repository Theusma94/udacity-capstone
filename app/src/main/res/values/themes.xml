<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoronaReminder" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/accent</item>
    </style>

    <style name="SpinnerBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_16</item>
        <item name="android:layout_marginEnd">@dimen/default_16</item>
        <item name="android:paddingTop">@dimen/default_4</item>
        <item name="android:paddingBottom">@dimen/default_4</item>
        <item name="android:background">@drawable/border_input</item>
    </style>

    <style name="EditTextOpactity" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/transparent_bg_edittext</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textColorHint">@color/accent</item>
    </style>

    <style name="InputTeste" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_input</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textColorHint">@color/primary_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/accent</item>
        <item name="colorControlNormal">@color/primary_color</item>
        <item name="android:textColorPrimary">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/primary_color</item>
    </style>
</resources>