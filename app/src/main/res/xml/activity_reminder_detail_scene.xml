<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/reminder_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:alpha="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/reminder_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:alpha="0.0"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reminder_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/first_tooltip" />
        <Constraint
            android:id="@+id/first_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="0.0"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintVertical_bias=".2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/second_tooltip"/>
        <Constraint
            android:id="@+id/second_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="0.0"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintVertical_bias=".2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/first_tooltip" />
        <Constraint
            android:id="@+id/third_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="0.0"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias=".05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_tooltip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fourth_tooltip"/>
        <Constraint
            android:id="@+id/fourth_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="0.0"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias=".05"
            app:layout_constraintTop_toBottomOf="@+id/second_tooltip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/third_tooltip" />
        <Constraint
            android:id="@+id/fifth_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="0.0"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias=".05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/third_tooltip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sixth_tooltip"/>
        <Constraint
            android:id="@+id/sixth_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="0.0"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias=".05"
            app:layout_constraintTop_toBottomOf="@+id/fourth_tooltip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fifth_tooltip" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/reminder_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:alpha="1.0"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <Constraint
            android:id="@+id/reminder_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:alpha="1.0"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reminder_title"
            app:layout_constraintBottom_toTopOf="@+id/first_tooltip"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/first_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="1.0"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            app:layout_constraintVertical_bias=".2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/second_tooltip"/>
        <Constraint
            android:id="@+id/second_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="1.0"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintVertical_bias=".2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/first_tooltip" />
        <Constraint
            android:id="@+id/third_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="1.0"
            android:layout_marginStart="32dp"
            app:layout_constraintVertical_bias=".05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_tooltip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fourth_tooltip"/>
        <Constraint
            android:id="@+id/fourth_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="1.0"
            android:layout_marginEnd="32dp"
            app:layout_constraintVertical_bias=".05"
            app:layout_constraintTop_toBottomOf="@+id/second_tooltip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/third_tooltip" />
        <Constraint
            android:id="@+id/fifth_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="1.0"
            android:layout_marginStart="32dp"
            app:layout_constraintVertical_bias=".05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/third_tooltip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sixth_tooltip"/>
        <Constraint
            android:id="@+id/sixth_tooltip"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:alpha="1.0"
            android:layout_marginEnd="32dp"
            app:layout_constraintVertical_bias=".05"
            app:layout_constraintTop_toBottomOf="@+id/fourth_tooltip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fifth_tooltip" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:autoTransition="animateToEnd"
        app:duration="2000"/>
</MotionScene>
